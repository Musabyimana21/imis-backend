# IMIS Backend Configuration with MTN MoMo API
# Copy this to .env and fill in your MTN credentials

# Database
DATABASE_URL=postgresql://postgres:password123@localhost:5432/imis

# Security
SECRET_KEY=dev-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# MTN Mobile Money API Configuration
# Get these from: https://momodeveloper.mtn.com/
MTN_MOMO_ENABLED=false
MTN_MOMO_ENVIRONMENT=sandbox
MTN_MOMO_BASE_URL=https://sandbox.momodeveloper.mtn.com
MTN_MOMO_SUBSCRIPTION_KEY=your_subscription_key_here
MTN_MOMO_API_USER=your_api_user_uuid_here
MTN_MOMO_API_KEY=your_api_key_here
MTN_MOMO_CALLBACK_URL=https://your-domain.com/api/payments/mtn-callback
MTN_MOMO_TARGET_ENVIRONMENT=sandbox

# Airtel Money API Configuration (Optional)
AIRTEL_MONEY_ENABLED=false
AIRTEL_MONEY_CLIENT_ID=your_client_id_here
AIRTEL_MONEY_CLIENT_SECRET=your_client_secret_here
AIRTEL_MONEY_BASE_URL=https://openapiuat.airtel.africa

# Payment Settings
UNLOCK_FEE=1000.0
COMMISSION_RATE=0.10
PAYMENT_TIMEOUT_SECONDS=300

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@imis.rw

# SMS Configuration (Optional - for notifications)
SMS_ENABLED=false
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=IMIS
